{
    "name": "dbt/moneris-api",
    "description": "An easier way to consume the Moneris eCommerce Unified API.",
    "keywords": ["moneris", "api"],
    "license": "MIT",
    "authors": [
        {
            "name": "Craig Paul",
            "email": "craig@townfolio.co"
        },
        {
            "name": "Daniel S. Deboer",
            "email": "dandb@hey.com"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "ext-simplexml": "*",
        "adbario/php-dot-notation": "^3.3",
        "guzzlehttp/guzzle": "^6.5|^7.8"
    },
    "require-dev": {
        "fakerphp/faker": "^1.6",
        "laravel/pint": "^1.13",
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^9.3",
        "ramsey/uuid": "^4.7",
        "symfony/var-dumper": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "CraigPaul\\Moneris\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CraigPaul\\Moneris\\Tests\\": "tests/",
            "CraigPaul\\Moneris\\TestSupport\\": "test-support/"
        },
        "files": [
            "test-support/helpers.php"
        ]
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml --no-coverage",
        "coverage": "phpunit --configuration phpunit.xml",
        "cs": "pint",
        "cs-test": "pint --test"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
